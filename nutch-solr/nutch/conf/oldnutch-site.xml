<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>
  <property>
    <name>http.agent.name</name>
    <value>MeuCrawler</value>
  </property>
  <property>
    <name>http.agent.description</name>
    <value>Crawler para indexação de conteúdo</value>
  </property>
  <property>
    <name>http.agent.url</name>
    <value>https://www2.unifap.br/dcet/
  </property>
  <property>
    <name>http.agent.email</name>
    <value>seu-email@exemplo.com</value>
  </property>
  <property>
    <name>plugin.includes</name>
    <value>protocol-http|urlfilter-regex|parse-(html|tika)|index-(basic|anchor)|indexer-solr|scoring-opic|urlnormalizer-(pass|regex|basic)</value>
  </property>
  <property>
    <name>solr.server.url</name>
    <value>http://solr:8983/solr/nutch</value>
  </property>
  <property>
    <name>parser.character.encoding.default</name>
    <value>UTF-8</value>
  </property>
  <property>
    <name>parse.tika.mime.exclude</name>
    <value>application/x-javascript,text/css</value>
  </property>
</configuration>